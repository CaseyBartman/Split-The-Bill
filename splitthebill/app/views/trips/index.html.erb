<div class = "trips container-fluid">
<% if current_user %>
  <% @trips.each do |trip| %>
    <div>
      <h3 class = "tripsHead"><%= trip.name %></h3>
      <p><%= trip.start_date %> - <%= trip.end_date %></p>
      <p><strong class = "tripsHead">Participants: </strong>
        <% trip.users.each do |user| %>
          <%= user.name %>
          <% if user != trip.users.last %>, <% end %>
        <% end %>
      </p>
      <%= link_to 'Show', trip_path(trip), class: "btn btn-primary tripButton" %>
    </div>
    <hr class>
  <% end %>
  <%= link_to "New trip", new_trip_path, class: "btn btn-primary tripButton" %>
<% else  %>
<div class = "tripsNotSign">
  <%= link_to 'Sign In', new_user_session_path, class: 'btn btn-primary signButton' %>
<p>You are currently not signed in. Please press "Sign In" above to view, create, or show trips and/or expenses. Thank You!</p>
<% end %>
</div>
</div>

